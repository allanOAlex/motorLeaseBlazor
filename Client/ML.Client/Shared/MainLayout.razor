@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        @if (UserIsLoggedIn == true)
        {
            <div class="top-row px-4">
                <a href="" target="_blank">@AuthText</a>
            </div>
        }
        <div class="top-row px-4">
            
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    [Parameter]
    public string AuthText { get; set; } = "Logout";
    bool UserIsLoggedIn = false;


}